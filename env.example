# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/groundwater_db
INFLUXDB_URL=http://localhost:8086
INFLUXDB_TOKEN=your_influxdb_token
INFLUXDB_ORG=groundwater_org
INFLUXDB_BUCKET=groundwater_data

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Security
SECRET_KEY=your-secret-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# External APIs
OPENWEATHER_API_KEY=your_openweather_api_key
NASA_POWER_API_KEY=your_nasa_power_api_key
GOOGLE_MAPS_API_KEY=your_google_maps_api_key
MAPBOX_API_KEY=your_mapbox_api_key

# Cloud Services
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
GCP_PROJECT_ID=your_gcp_project_id
GCP_CREDENTIALS_PATH=path/to/credentials.json

# MQTT Configuration
MQTT_BROKER=localhost
MQTT_PORT=1883
MQTT_USERNAME=your_mqtt_username
MQTT_PASSWORD=your_mqtt_password

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=localhost:9092

# Notification Services
FIREBASE_CREDENTIALS_PATH=path/to/firebase_credentials.json
SNS_TOPIC_ARN=arn:aws:sns:region:account:topic

# Application Settings
DEBUG=True
LOG_LEVEL=INFO
API_V1_STR=/api/v1
PROJECT_NAME=Groundwater Monitoring System
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]

# Data Processing
BATCH_SIZE=1000
ANOMALY_THRESHOLD=3.0
FORECAST_HORIZON_DAYS=30
